- for favorite in @favorites
  %div.raptor
    %div.picture= link_to image_tag(favorite.velociraptor.photo.url(:thumb)), members_velociraptor_path(favorite.velociraptor)
    -#%div{ :id => "fave#{favorite.velociraptor.id}" }
    -#  = render :partial => "members/velociraptors/velociraptor", :object => favorite.velociraptor
    %div
      Name:
      %span= h favorite.velociraptor.name
    %div
      Age:
      %span= h favorite.velociraptor.age
    %div
      Cost:
      %span= h favorite.velociraptor.cost
    %div
      Attack:
      %span= h favorite.velociraptor.attack
    %div
      Gender:
      %span= h favorite.velociraptor.gender
    %div
      Description:
      %span= h favorite.velociraptor.description
    %div
      %span= link_to 'Show me the raptor', members_velociraptor_path(favorite.velociraptor)
      %span= link_to 'Edit raptor', edit_members_velociraptor_path(favorite.velociraptor)
      %span= link_to 'Kill raptor', members_velociraptor_path(favorite.velociraptor), :confirm => 'Are you sure?', :method => :delete

