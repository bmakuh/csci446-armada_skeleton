%div.raptor
  .picture-300
    = link_to image_tag(@velociraptor.photo.url(:medium)), @velociraptor
  %div{ :id => "fave#{@velociraptor.id}" }
    = render :partial => "velociraptor", :object => @velociraptor
  %p
    %strong Name:
    =h @velociraptor.name
  %p
    %strong Age:
    =h @velociraptor.age
  %p
    %strong Cost:
    =h @velociraptor.cost
  %p
    %strong Attack:
    =h @velociraptor.attack
  %p
    %strong Gender:
    =h @velociraptor.gender
  %p
    %strong Description:
    =h @velociraptor.description

%p
  - if @velociraptor.creator.eql?(current_user)
    = link_to "Edit", edit_members_velociraptor_path(@velociraptor)
    |
    = link_to "Destroy", members_velociraptor_path(@velociraptor), :confirm => 'Are you sure?', :method => :delete
    |
  = link_to "View All", members_velociraptors_path
